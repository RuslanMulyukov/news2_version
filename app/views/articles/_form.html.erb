<%= form_for([current_user, @article]) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select :category_id, options_from_collection_for_select(current_user.categories, "id", "title", :selected => @selected_category) %> |
    <%= link_to("Create my category", new_user_category_path(current_user), :class => 'links new_category') %>
  </div><br />
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div><br />
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "mceEditor" %>
  </div><br />
  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_field :source %>
  </div><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<style type='text/css'>

  .field label {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 15px;
  }

  .actions {
    margin-bottom: 15px;
  }

</style>

